{% extends 'base.html.twig' %}

{# {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %} #}

{% block specificsstylesheets %}
<link href="{{ asset('css/tissus.css') }}" rel="stylesheet"/>
{% endblock %}

{% block title %}
Création d'un tissu
{% endblock %}

{% block menu %}
{% include 'menu.html.twig' %}
{% endblock %}

{% block main %}
<h1>Création d'un tissu</h1>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Liste des produits</div>
  <div class="panel-body">
    <p>Tous les champs sont obligatoires.<br/>
	Seule une catégorie est possible.
	</p>
  </div>
</div>
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

<div class="form-group">
    {{ form_label(form.name, form.name.vars.label, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
      {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_errors(form.name) }}
</div>
<div class="form-group">
    {{ form_label(form.picturepath, form.picturepath.vars.label, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
      {{ form_widget(form.picturepath, {'attr': {'class': 'btn-default btn'}}) }}
    </div>
    {{ form_errors(form.picturepath) }}
</div>
<div class="form-group">
    {{ form_label(form.couleur, form.couleur.vars.label, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
<div class="col-sm-10">
{% for plop in form.couleur %}
	{{ form_widget(plop) }}
	<label for="{{ plop.vars.id }}" width="50px" height="50px" style="background-color: {{ plop.vars.label }};">
	<span></span>
	</label>
{% endfor %}
</div>
</div>
<div class="form-group">
    {{ form_label(form.save, form.save.vars.label, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
      {{ form_widget(form.save, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}

{% endblock %}

